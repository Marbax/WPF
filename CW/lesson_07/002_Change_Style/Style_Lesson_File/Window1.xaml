<Window x:Class="Style_Lesson_File.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        >
    <Grid MouseDown="ListBoxItem_MouseDown" >
        <ComboBox Height="23" Margin="77,30,81,0" Name="comboBox1" VerticalAlignment="Top" SelectionChanged="comboBox1_SelectionChanged" />
        <Label Height="28" Margin="77,6,81,0" Name="label1" VerticalAlignment="Top">Clic</Label>
        <Button Height="23" HorizontalAlignment="Left" Margin="30,86,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click">First</Button>
        <Button Height="23" Margin="230,86,0,0" Name="button2" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Click="button2_Click">Second</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,86,57,0" Name="button3" VerticalAlignment="Top" Width="75" Click="button3_Click">Third</Button>
        <ListBox  HorizontalAlignment="Left" Margin="30,132,0,12" Name="listBox1" Width="120">
            <ListBoxItem >First</ListBoxItem>
            <ListBoxItem >Second</ListBoxItem>
            <ListBoxItem >Third</ListBoxItem>
        </ListBox>
        <TextBox HorizontalAlignment="Right" Margin="0,132,12,12" Name="textBox1" Width="120" />
    </Grid>
</Window>
